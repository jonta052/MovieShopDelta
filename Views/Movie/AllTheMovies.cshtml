@model MovieShopDelta.Models.Database.Movie
@{
    ViewBag.Title = "All Movies";
}
<h2>All Movies</h2>

<hr />
@using (Html.BeginForm("AllTheMovies", "Movie", FormMethod.Post))
{
<div class="row" style="margin-left: 2px">
    @Html.AntiForgeryToken()
    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Movie Title", style = "max-width: 280px" } })
    &ensp;
    <button type="submit" value="create" class="btn btn-success" style="width:80px">Search</button>
</div>
<p style="margin-left: 4px; margin-top: 4px"><i>Enter a movie title to search for</i></p>
}


<div>
    @Html.Action("AllMovies")
</div>

