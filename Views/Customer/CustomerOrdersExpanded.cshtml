@model IEnumerable<MovieShopDelta.Models.Database.Order>

<br />
<br />
<h4>Orders made</h4>
<hr />
<br />

@foreach (var item in Model)
{
    <div class="row">
        <div class="col-sm-3">
            <b>Order Date</b>
        </div>
        <div class="col-sm-3">
            <b>Order Id</b>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 border-customerorder">
            @Html.DisplayFor(modelItem => item.OrderDate)
        </div>
        <div class="col-sm-3 border-customerorder">
            @Html.DisplayFor(modelItem => item.Id)
        </div>
    </div>
    <br />
    <div class="row">
        @if (item != null)
        {
            @Html.Action("CustomerOrderRows", item)
        }
    </div>
}
