@{
    ViewBag.Title = "Home Page";
}

<div id="carouselExampleInterval" class="carousel slide BgA" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active" data-bs-interval="8000">
            <img style="width: 500px; height: 500px; object-fit: contain; " src="https://m.media-amazon.com/images/I/71715eBi1sL._AC_SY879_.jpg" class="d-block w-100">
        </div>
        <div class="carousel-item" data-bs-interval="8000">
            <img src="https://i.ytimg.com/vi/J61XJhYiUpg/movieposter.jpg" style="width: 500px; height: 500px; object-fit: contain; " class="d-block w-100 CarouselImg">
        </div>
        <div class="carousel-item" data-bs-interval="8000">
            <img src="https://static.posters.cz/image/750/poster/lord-of-the-rings-fellowship-i11723.jpg" style="width: 500px; height: 500px; object-fit: contain; " class="d-block w-100 CarouselImg">
        </div>
        <div class="carousel-item" data-bs-interval="8000">
            <img src="https://upload.wikimedia.org/wikipedia/en/thumb/6/67/Forrest_Gump_poster.jpg/220px-Forrest_Gump_poster.jpg" style="width: 500px; height: 500px; object-fit: contain; " class="d-block w-100 CarouselImg">
        </div>
        <div class="carousel-item" data-bs-interval="8000">
            <img src="https://image.posterlounge.se/images/l/1905183.jpg" style="width: 500px; height: 500px; object-fit: contain; " class="d-block w-100 CarouselImg">
        </div>
        <div class="carousel-item" data-bs-interval="8000">
            <img src="https://img.fruugo.com/product/6/42/99800426_max.jpg" style="width: 500px; height: 500px; object-fit: contain; " class="d-block w-100 CarouselImg">
        </div>
        <div class="carousel-item" data-bs-interval="8000">
            <img src="https://i.pinimg.com/originals/4e/3f/41/4e3f41bab342202c89c677305ef4071c.jpg" style="width: 500px; height: 500px; object-fit: contain; " class="d-block w-100 CarouselImg">
        </div>
        <div class="carousel-item">
            <img style="width: 500px; height: 500px; object-fit: contain; " src="https://images-na.ssl-images-amazon.com/images/S/pv-target-images/7d2081c07a6afa338191e68c73e1959f7761b53cf9b691d59926aa0ef89874e5._RI_V_TTW_.jpg" class="d-block w-100 img">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<br />
<br />
<div class="container BgA">
    <div class="row">
        <div class="col-sm-5 bg-blue-opacity top-list-box">
            @* Most popular movies *@
            @Html.Action("MostPopularMovies")
        </div>
        <div class="col-sm-1">
        </div>
        <div class="col-sm-6 bg-blue-opacity top-list-box">
            @* 5 newest movies *@
            @Html.Action("FiveNewestMovies")
        </div>
    </div>
    <div class="row" style="margin-top:30px;">
        <div class="col-sm-5 bg-blue-opacity top-list-box">
            @* 5 oldest movies *@
            @Html.Action("FiveOldestMovies")
        </div>
        <div class="col-sm-1">
        </div>
        <div class="col-sm-6 bg-blue-opacity top-list-box">
            @* 5 cheapest movies *@
            @Html.Action("FiveCheapestMovies")
        </div>
    </div>
    <div class="row" style="margin-top:30px;">
        <div class="col-sm-5 bg-blue-opacity top-list-box">
            @* Customer with the most expensive order *@
            @Html.Action("MostExpensiveOrder")
        </div>
    </div>
</div>
