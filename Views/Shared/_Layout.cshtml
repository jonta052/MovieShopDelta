<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        table {
            border-spacing: 5px;
        }

        th, td {
            padding: 5px;
            align-content: center;
        }
    </style>
</head>
<body>
    <br />
    <br />
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            @Html.ActionLink("SFH", "Index", "Home", null, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn navbar-item" })
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Movies</a>
                        <div class="dropdown-menu">
                            @Html.ActionLink("Movie Catalogue", "MovieCatalogue", "Movie", null, new { @class = "btn dropdown-item" })
                            @Html.ActionLink("Buy Movies", "AllTheMovies", "Movie", null, new { @class = "btn dropdown-item" })
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#">Orders</a>
                        <div class="dropdown-menu">
                            @Html.ActionLink("Purchase History", "CustomerOrder", "Customer", null, new { @class = "btn dropdown-item" }) @*Change bought movies here*@
                            @Html.ActionLink("Shopping Cart", "ShoppingCart", "Order", null, new { @class = "btn dropdown-item" })
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("About","Home")">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Contact","Home")">Contact</a>
                    </li>
                </ul>
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="navbar-brand" href="@Url.Action("ShoppingCart","Order")">
                            <img src="~/shoppingcart.png" alt="Shopping cart icon" style="height:35px; width:35px">
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Settings</a>
                        <div class="dropdown-menu dropdown-menu-end">
                            @Html.ActionLink("Add Customer", "AddCustomer", "Customer", null, new { @class = "btn dropdown-item" })
                            @Html.ActionLink("Add Movie", "AddMovie", "Movie", null, new { @class = "btn dropdown-item" })
                        </div>
                    </li>
                </ul>

            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year Team Delta</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>

@*Changes*@
